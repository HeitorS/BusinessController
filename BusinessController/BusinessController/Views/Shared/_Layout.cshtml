<head>
    <title>Business Controller</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/geral.css")


    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.js")
    @Scripts.Render("~/Scripts/jquery.validate-vsdoc.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/bootstrap.js")


    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/geral.css")
    @Scripts.Render("~/Scripts/js")

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Business Controller</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Página Inicial", "Index", "Home", new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Estoque", "Index", "Estoque", new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Pedidos", "Index", "Pedido", new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Faturamentos", "Index", "Faturamento", new { disabled = "disabled" })
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logar", "Index", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Deslogar", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

