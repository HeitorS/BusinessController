<head>
    <title>Business Controller</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/geral.css")


    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.js")
    @Scripts.Render("~/Scripts/jquery.validate-vsdoc.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/bootstrap.js")

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-noty/2.3.7/packaged/jquery.noty.packaged.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <script src="http://malsup.github.io/jquery.blockUI.js" type="text/javascript"></script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/geral.css")

    <script type="text/javascript">
        var dirGravar = '@Url.Action("Gravar")';
        var dirExcluir = '@Url.Action("Excluir")';
        var dirLer = '@Url.Action("Buscar")';
    </script>

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Business Controller", "Index", new { controller = "Home" }, new { style = "font-size: 12pt; font-style: bold;" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Página Inicial", "Index", new { controller = "Home" }, new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Estoque", "Index", new { controller = "Home" }, new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Pedidos", "Index", new { controller = "Home" }, new { })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Faturamentos", "Index", new { controller = "Home" }, new { disabled = "disabled" })
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logar", "Index", new { controller = "Login" })</li>
                        <li>@Html.ActionLink("Cadastrar", "Index", new { controller = "Cadastro" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Deslogar", "Logout", new { controller = "Login" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        function Message(message, type) {
            noty({
                text: message,
                type: type,
                layout: "bottomRight",
                timeout: 5000,
                closeWith: ["click", "houver"],
                animation: {
                    open: 'animated bounceInRight',
                    close: 'animated bounceOutRight',
                    easing: 'swing',
                    speed: 500
                }
            });
        }
    </script>
</body>

